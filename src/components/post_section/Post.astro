---
const { post } = Astro.props;

const { url } = post;
const { title, description, img_path, date } = post.frontmatter;
---

<a
  href={url}
  class="flex flex-col items-center rounded-lg shadow-md md:flex-row md:max-w-xl bg-primary dark:bg-dk-primary"
>
  {
    img_path && (
      <img
        class="w-full h-28 rounded-t-lg md:w-64 md:rounded-l-lg lg:object-fill object-cover"
        src={img_path}
        alt={title}
      />
    )
  }
  <div class="p-4">
    <h2 class="text-2xl font-bold">
      {title}
    </h2>
    <p>{description}</p>
    <p class="text-gray-500 dark:text-gray-500">{date}</p>
  </div>
</a>
<!-- Horizontal Line -->
<div class="w-full h-0.5 my-4 bg-secondary dark:bg-dk-secondary"></div>
