---
import BaseLayout from "./BaseLayout.astro";

import { info } from "../data/info";
import Contact from "../components/contact_section/Contact";

const { frontmatter } = Astro.props;

const { title, date, img_path } = frontmatter;
// TODO: add tags here
---

<BaseLayout>
  <main class="mt-10">
    <div class="mb-4 md:mb-0 w-full mx-auto relative">
      <div
        class="flex flex-row relative z-10 justify-between items-center mb-4"
      >
        <div class="px-4 lg:px-0">
          <h1>
            {title}
          </h1>
          <!-- <a TODO: add tags here
          href="#"
          class="py-2 text-green-700 inline-flex items-center justify-center mb-2"
        >
          Cryptocurrency
        </a> -->
        </div>

        <p class="text-sm lg:text-base px-4 lg:px-0">
          {date}
          <a href="/posts" class="hover:underline">Back to posts</a>
        </p>
      </div>

      <img src={img_path} class="w-full object-cover lg:rounded lg:h-96 h-64" />
    </div>

    <div class="flex flex-col lg:flex-row lg:space-x-12 justify-center">
      <div
        class="px-4 lg:px-0 mt-12 text-text dark:text-dk-text text-lg leading-relaxed w-full lg:w-3/4"
      >
        <slot />
      </div>

      <div class="w-full lg:w-1/4 m-auto mt-12 max-w-screen-sm">
        <div class="p-4 border-t border-b md:border md:rounded">
          <div class="flex py-2">
            <img
              src={info.picture}
              class="h-10 w-10 rounded-full mr-2 object-cover"
            />
            <div>
              <p class="font-semibold text-gray-700 text-sm">{info.name}</p>
              <p class="font-semibold text-gray-600 text-xs">{info.role}</p>
            </div>
          </div>
          <p class="text-gray-700 py-3">
            {info.brief_description}
          </p>
          <Contact contact={info.contact} size="md" />
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
