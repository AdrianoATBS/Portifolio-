---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import { info } from "../data/info";
import Contact from "../components/contact_section/Contact";
import About from "../components/about_section/About";
import Projects from "../components/projects_section/Projects"; // Importando o componente de Projetos
import { Image } from "astro:assets";

const allPosts = await Astro.glob("./posts/*.md");
---

<BaseLayout title="Home">
  <section class="lg:h-screen lg:m-0 my-20 mx-2 bg-primary dark:bg-dk-primary" id="home"> <!-- Azul petróleo -->
    <div class="flex flex-col lg:flex-row justify-center items-center h-full space-y-4">
      <div class="profile-pic">
        <Image
          src={info.picture}
          alt={info.picture_alt}
          width={200}
          height={200}
          class="lg:h-96 lg:w-96 h-40 w-40 rounded-full object-fill object-center shadow-lg"
        />
      </div>

      <div class="flex flex-col lg:mx-8 leading-relaxed space-y-4 text-text dark:text-dk-text">
        <h1 class="text-3xl lg:text-5xl font-bold font-serif text-secondary dark:text-dk-secondary">
          Olá, eu sou <span class="bg-clip-text animate-pulse typewriter text-secondary dark:text-dk-secondary">{info.name}</span>
        </h1>
      </div>
    </div>
  </section>
  
  <section class="lg:m-0 my-20 mx-2" id="about">
    <About about={info.about} client:visible />
  </section>

  <!-- Seção de Meus Cursos e Minhas Metas -->
   <section class="flex flex-col justify-center items-center h-full space-y-6 bg-background dark:bg-dk-primary p-8 rounded-lg shadow-lg">
    <h1 class="text-4xl font-bold text-primary dark:text-dk-secondary mb-4">Cursos e Metas</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full text-center"> 
      <div class="text-center">
        <h2 class="text-2xl font-semibold text-secondary dark:text-dk-secondary mb-4">Meus Cursos</h2>
        <p class="text-lg text-text dark:text-dk-text">Curso de Python Completo - Danki Code</p>
        <p class="text-lg text-text dark:text-dk-text">Curso Webmaster Front-End Completo - Danki Code</p>
        <p class="text-lg text-text dark:text-dk-text">Introdução ao Entity Framework Core - Desenvolvedor.io</p>
        <p class="text-lg text-text dark:text-dk-text">Desenvolvimento Backend - Estartando Devs</p>
      </div>

      <div class="text-center">
        <h2 class="text-2xl font-semibold text-secondary dark:text-dk-secondary mb-4" ">Minhas Metas</h2>
        <p class="text-lg text-text dark:text-dk-text">Conquistar meu primeiro emprego como Desenvolvedor de Software.</p>
        <p class="text-lg text-text dark:text-dk-text">Aprofundar meus conhecimentos em <strong>C# e .NET</strong>.</p>
        <p class="text-lg text-text dark:text-dk-text">Alcançar fluência em inglês.</p>
        <p class="text-lg text-text dark:text-dk-text">Aprender sobre <strong>cibersegurança</strong>.</p>
        <p class="text-lg text-text dark:text-dk-text">Contribuir para projetos open source.</p>
        <p class="text-lg text-text dark:text-dk-text">Participar de hackathons.</p>
      </div>
    </div>

    <a href="/cursos-e-metas" class="bg-secondary text-white py-2 px-6 rounded transition duration-300 hover:bg-primary dark:hover:bg-dk-secondary mb-20 text-center">
      Saber Mais
    </a>
  </section>


  <section class="lg:m-0 my-20 mx-2" id="projects">
    <Projects /> <!-- Integrando o componente de Projetos -->
  </section>

  <section class="lg:h-screen lg:m-0 my-20 mx-2 flex-col flex justify-center w-full bg-primary dark:bg-dk-primary">
    <div class="flex flex-row justify-center items-center h-full space-y-4">
      <Contact contact={info.contact} size="lg" />
    </div>
  </section>
</BaseLayout>