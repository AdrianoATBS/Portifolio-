      "Consolidar minha carreira em uma posição de liderança técnica, ajudando outros profissionais a crescerem e contribuindo para o sucesso da equipe"
    ]
  }
};
---

<BaseLayout title="Cursos e Metas">
  <section class="min-h-screen flex flex-col justify-start items-center bg-background dark:bg-dk-primary p-8 rounded-lg shadow-lg">
    <h1 class="text-4xl font-bold text-secondary dark:text-dk-secondary mb-8">Cursos e Metas</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 w-full max-w-6xl">
      <!-- Seção de Cursos -->
      <div>
        <h2 class="text-2xl font-semibold text-secondary dark:text-dk-secondary mb-6 text-center">Meus Cursos</h2>
        <div class="space-y-4">
          {cursos.map((curso, index) => (
            <div class="group">
              <div 
                class="bg-[#f5f5f5] dark:bg-[#0f0f0f] p-4 rounded-lg shadow-lg cursor-pointer transform hover:scale-[1.02] transition-all duration-300 flex items-center justify-between"
                onclick={`toggleContent('curso-${index}')`}
              >
                <p class="text-lg text-text dark:text-dk-text">{curso.nome}</p>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary dark:text-dk-secondary transform group-hover:rotate-180 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
              <div id={`curso-${index}`} class="hidden mt-2 p-4 bg-[#f5f5f5] dark:bg-[#0f0f0f] rounded-lg shadow-lg text-text dark:text-dk-text">
                <div class="space-y-2">
                  <p><strong>Instituição:</strong> {curso.instituicao}</p>
                  <p><strong>Conclusão:</strong> {curso.conclusao}</p>
                  {curso.cargaHoraria && <p><strong>Carga Horária:</strong> {curso.cargaHoraria}</p>}
                  {curso.local && <p><strong>Local:</strong> {curso.local}</p>}
                  <p><strong>Descrição:</strong> {curso.descricao}</p>
                  {curso.codigoValidacao && (
                    <div class="mt-4 space-y-2">
                      <div class="flex items-center gap-2">
                        <p><strong>Código de Validação:</strong> {curso.codigoValidacao}</p>
                        <button 
                          onclick={`copiarCodigo('${curso.codigoValidacao}')`}
                          class="text-secondary hover:text-secondary/80 transition-colors"
                          title="Copiar código"
                        >
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                          </svg>
                        </button>
                      </div>
                      <a href={curso.linkValidacao} 
                         target="_blank" 
                         class="inline-block bg-secondary text-white py-2 px-4 rounded-lg text-sm font-semibold transition duration-300 hover:bg-secondary/80">
                        Validar Certificado
                      </a>
                    </div>
                  )}
                  {curso.certificadoImg && (
                    <div class="mt-4">
                      <h4 class="text-lg font-semibold text-secondary dark:text-dk-secondary mb-2">Certificado</h4>
                      <img 
                        src={curso.certificadoImg} 
                        alt={`Certificado ${curso.nome}`} 
                        class="w-full max-w-2xl mx-auto rounded-lg shadow-md hover:shadow-xl transition-shadow cursor-pointer"
                        onclick={`window.open('${curso.certificadoImg}', '_blank')`}
                      />
                    </div>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Seção de Metas -->
      <div>
        <h2 class="text-2xl font-semibold text-secondary dark:text-dk-secondary mb-6 text-center">Minhas Metas</h2>
        <div class="space-y-4">
          {Object.entries(metas).map(([key, periodo], index) => (
            <div class="group">
              <div 
                class="bg-[#f5f5f5] dark:bg-[#0f0f0f] p-4 rounded-lg shadow-lg cursor-pointer transform hover:scale-[1.02] transition-all duration-300 flex items-center justify-between"
                onclick={`toggleContent('meta-${key}')`}
              >
                <h3 class="text-lg text-text dark:text-dk-text">{periodo.titulo}</h3>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary dark:text-dk-secondary transform group-hover:rotate-180 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
              <div id={`meta-${key}`} class="hidden mt-2 space-y-2">
                {periodo.items.map((meta) => (
                  <div class="bg-[#f5f5f5] dark:bg-[#0f0f0f] p-4 rounded-lg shadow-lg">
                    <p class="text-text dark:text-dk-text">{meta}</p>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script is:inline>
  function toggleContent(id) {
    const content = document.getElementById(id);
    content.classList.toggle('hidden');
  }

  function copiarCodigo(codigo) {
    navigator.clipboard.writeText(codigo).then(() => {
      // Opcional: Adicionar feedback visual
      alert('Código copiado!');
    }).catch(err => {
      console.error('Erro ao copiar código:', err);
    });
  }
</script>